ofa-v2-cma-roe-{{ interface_name }}0 u2.0 nonthreadsafe default libdaplofa.so.2 dapl.2.0 "{{interface_name}}0 0" ""
ofa-v2-{{ interface_name }}1 u2.0 nonthreadsafe default libdaplofa.so.2 dapl.2.0 "{{ interface_name }}1 1" ""
ofa-v2-cma-roe-{{ interface_name }}1 u2.0 nonthreadsafe default libdaplofa.so.2 dapl.2.0 "{{ interface_name}}1 0" ""
